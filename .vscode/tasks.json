{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Install",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--install",
        "${workspaceFolder}/cmake-build"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "CMake Dist Clean",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "${workspaceFolder}/cmake-build"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}